{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules", "dist"]
}